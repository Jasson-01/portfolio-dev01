---
const PROJECTS = [
  {
    title: "SVGL - A beautiful library with SVG logos",
    description:
      "Lorem ipsum dolor sit amet consectetur adipiscing elit consequat non, nunc senectus enim condimentum potenti taciti ridiculus morbi.",
    link: "https://svgl.vercel.app/",
    github: "https://github.com/pheralb/svgl",
    image: "/projects/APP11.webp",
    tags: ["Next.js", "Tailwind CSS", "React"],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul>
        {tags.map((tag) => (
          <li>{tag}</li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
